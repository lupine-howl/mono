{
  "private": true,
  "scripts": {
    "build": "npm run ex:copy && npm run ex:client && npm run ex:server",
    "ex:copy": "rm -rf dist && mkdir -p dist/public && cp -R src/index.html dist/public/",
    "ex:client": "esbuild src/app.js --bundle --format=esm --platform=browser --splitting --outdir=dist/public --log-level=info",
    "ex:server": "esbuild src/server.mjs --bundle --format=esm --platform=node  --packages=external --outfile=dist/server.mjs",
    "start": "node dist/server.mjs"
  },
  "dependencies": {
    "@loki/tasks": "file:..",
    "@loki/db": "file:../../db",
    "@loki/layout": "file:../../layout",
    "@loki/minihttp": "file:../../minihttp",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.9"
  }
}
