{
  "name": "@loki/db",
  "type": "module",
  "exports": {
    ".": "./src/services/index.js",
    "./plugin": {
      "browser": "./src/plugin/plugin.client.js",
      "node": "./src/plugin/plugin.server.mjs",
      "default": "./src/plugin/plugin.server.mjs"
    },
    "./schemas/*": "./src/schemas/*",
    "./ui/*": "./src/ui/*",
    "./util": "./src/shared/index.js"
  },
  "scripts": {
    "build:ui": "esbuild src/ui/*.js                 --outdir=dist/ui       --bundle --format=esm --platform=browser --packages=external --log-level=info",
    "build:schemas": "esbuild src/schemas/*.js       --outdir=dist/schemas  --bundle --format=esm --platform=browser --packages=external --log-level=info",
    "build:services": "esbuild src/services/index.js --outdir=dist/services --bundle --format=esm --platform=node    --packages=external --log-level=info",
    "build:shared": "esbuild src/shared/*.js         --outdir=dist/shared   --bundle --format=esm --platform=node    --packages=external --log-level=info",
    "dev:schemas": "esbuild src/schemas/*.js         --outdir=dist/schemas  --bundle --format=esm --platform=browser --packages=external --log-level=info --watch",
    "dev:ui": "esbuild src/ui/*.js                   --outdir=dist/ui       --bundle --format=esm --platform=browser --packages=external --log-level=info --watch",
    "dev:services": "esbuild src/services/index.js   --outdir=dist/services --bundle --format=esm --platform=node    --packages=external --log-level=info --watch",
    "dev:shared": "esbuild src/shared/index.js       --outdir=dist/shared   --bundle --format=esm --platform=node    --packages=external --log-level=info --watch",
    "build:plugin": "rsync -a --delete src/plugin/ dist/plugin/",
    "dev:plugin": "npm run build:plugin && chokidar 'src/plugin/**' -i '**/.git/**' -c 'rsync -a --delete src/plugin/ dist/plugin/' --initial",
    "build": "npm i && rm -rf dist && npm run build:ui && npm run build:services && npm run build:shared && npm run build:plugin && npm run build:schemas",
    "watch": "npm run build && npm-run-all -p dev:ui dev:services dev:shared dev:plugin dev:schemas",
    "publish:patch": "npm version patch --no-git-tag-version && npm publish",
    "examples": "npm run build && npm i --prefix examples && npm run build --prefix examples && npm start --prefix examples"
  },
  "dependencies": {
    "@loki/ai-chat": "../ai-chat",
    "@loki/ai-projects": "../ai-projects",
    "@loki/file-browser": "../file-browser",
    "@loki/layout": "../layout",
    "@loki/db": "../db",
    "@loki/http-base": "../http-base",
    "@loki/minihttp": "../minihttp",
    "@loki/tasks": "../tasks",
    "@loki/utilities": "../utilities",
    "better-sqlite3": "^12.2.0"
  },
  "peerDependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5"
  }
}
